package unicesumar.segundoBimestre;

public class Aluno {

	private String nomeAluno;
	private int RA;

	// - Uma associação 1 para 0..1 bidirecional.
	private Boleto boletoMensal;

	public Aluno(String nomeAluno, int RA) {

		this.nomeAluno = nomeAluno;
		this.RA = RA;
	}

	public String getAluno() {

		return this.nomeAluno;
	}

	public int getRA() {

		return this.RA;
	}

	public void setBoleto(Boleto boletoMensal) {   // boleto pode sofrer alterações de valores...

		this.boletoMensal = boletoMensal;
	}

	public Boleto getBoleto() {

		return boletoMensal;
	}

}
